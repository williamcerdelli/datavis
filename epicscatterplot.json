{
  "width": 700,
  "height": 700,

  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "data": {
    "url": "https://raw.githubusercontent.com/williamcerdelli/datavis/main/epic.csv"
  },
  "encoding": {
    "x": {
      "field": "total_blue_strikes",
      "type": "quantitative",
      "scale": {"zero": false}
    },
    "y": {
      "field": "total_red_strikes",
      "type": "quantitative",
      "scale": {"zero": false}
    },
   "color": {
      "field": "winner",
      "type": "nominal",
      "title": "Winner",
      "scale": {
        "domain": ["red", "blue", "draw"],
        "range": ["red", "blue", "black"]
        }
     
     },

    "opacity": {"condition": {"param": "winner", "value": 1}, "value": 0.2},
    
    "tooltip": [
      {"field": "winner", "type": "nominal", "title": "Winner"},
      {
        "field": "B_Name",
        "type": "nominal",
        "title": "Blue corner fighter"
      },
      {
        "field": "R_Name",
        "type": "nominal",
        "title": "Red corner fighter"
      },
      {"field": "total_blue_strikes", "type": "quantitative", "title": "Blue significant strikes"},
       {"field": "total_red_strikes", "type": "quantitative", "title": "Red significant strikes"},
       {
        "field": "winner",
        "type": "nominal",
        "title": "winner"
      }
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "circle",
        "cornerRadiusTopLeft": 3,
        "cornerRadiusTopRight": 3
      },
      "params": [
        {
          "name": "winner",
          "select": {"type": "point", "fields": ["winner"]},
          "bind": "legend"
        },
        {
          "name": "Fight_Year",
          "bind": {
            "input": "select",
            "options": [null, "2014", "2015", "2016", "2017"],
            "labels": ["Show All", "2014", "2015", "2016", "2017"],
            "name": "Year Selection: "
          }
        } 
      ]
    },
      {
      "mark": {"type": "text", "yOffset": -20,"xOffset":67.5,"fontSize": 13,
    "fontWeight": "bold"},
      "encoding": {
        "text": {"field": "B_Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity":{
          "condition":{
            "test":"(datum['total_blue_strikes']>300) && (datum['total_red_strikes']>300)",
            "value":1
          },
          "value":0
        }
        }
      },
      {
      "mark": {"type": "text", "yOffset": -20,"xOffset":-57.5,"fontSize": 13,
    "fontWeight": "bold"},
      "encoding": {
        "text": {"field": "R_Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity":{
          "condition":{
            "test":"(datum['total_blue_strikes']>300) && (datum['total_red_strikes']>300)",
            "value":1
          },
          "value":0
        }
        }
      },
      {
      "mark": {"type": "text", "yOffset": -20,"xOffset":5, "text":"vs","fontSize": 13,
    "fontWeight": "bold"},
      "encoding": {
        "color": {"value": "black"},
        "opacity":{
          "condition":{
            "test":"(datum['total_blue_strikes']>300) && (datum['total_red_strikes']>300)",
            "value":1
          },
          "value":0
        }
        }
      }
      




  ]



}
