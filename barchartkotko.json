{
  "width": 500,
  "height": 150,
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/williamcerdelli/datavis/main/fighterswins_ko.csv"},
  "mark": "bar",
  "encoding": {
    "y": {"field": "fighter", "type": "nominal", "sort":"-x"},
    "x": {"field": "n", "type": "quantitative","title":"KO/TKO wins"},
     "color": {
      "field": "winby",
      "type": "nominal",
      "title": "Win method",
      "scale": {
        "domain": [
          "KO/TKO"
    ], "range": [

          "orange"
          
    ] }
    },
    "tooltip": [
      {"field": "fighter", "type": "nominal", "title": "Fighter"},
      {"field": "n", "type": "quantitative" , "title": "Number of KO/TKO wins"}
    ]


  }
}
